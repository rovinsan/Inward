    body(ng-app="inwardApp", ng-controller="AppController")
        div(growl)
        nav.navbar.navbar-inverse.navbar-fixed-top
            div.container-fluid
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#sidebar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    
                    a.navbar-brand(href="/")
                        span.montserrat(style="font-weight: 700 !important;") code19 
                        span.montserrat(style="font-weight: lighter !important;color: #F44336 !important;") | Inward
                    
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar", style="float: left;")
                        i.fa.fa-angle-down(aria-hidden="true")
                
                div#navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            if(user)
                                - var username = JSON.stringify(user.local.email)
                                a(href="#", ng-init="$root.loggedinUser = #{username}")
                                    i.fa.fa-user-circle-o
                                    span.montserrat.size-10px   {{$root.loggedinUser | uppercase}}
                
        div.container-fluid
            div.row
                div#sidebar.col-md-2.col-sm-3.col-xs-12.sidebar
                    ul.nav.nav-sidebar
                        li(style="text-align: center; padding-bottom: 30px; padding-top: 30px;border-bottom: 2px solid #673AB7;")
                            i.fa.fa-stethoscope(style="font-size: 30px;color: white;padding-bottom: 10px;")
                            span.col-md-12.col-sm-12.col-xs-12(style="font-family: Roboto; font-size: 10px;color: white;") {{$root.loggedinUser | uppercase }}
                        li
                            a.white_a(href="/")
                                i.material-icons apps
                                | Dashboard
                        li
                            a.white_a(href="/patient") Patient
                        li
                            a.white_a(href="/doctor") Doctor
                        li
                            a.white_a(href="/drug") Drug
                        li
                            a.white_a(href="/test") Test
                        li
                            a.white_a(href="/report") Report
                        li
                            a.white_a(href="/ward") Ward  
                div.col-md-10.col-md-offset-2.col-sm-9.col-sm-offset-3.col-xs-12.main
                    div(ng-view)
        
